    <button onclick="send()">Send</button>
  </div>

  <script>
    function send() {
      let msg = document.getElementById("msg").value.toLowerCase();
      let chat = document.getElementById("chat");

      if(msg === "") return;

      chat.innerHTML += "<p><b>You:</b> " + msg + "</p>";

      let reply = "Sorry, I am learning ðŸ¤”";

      if(msg.includes("hi") || msg.includes("hello")) reply = "Hello ðŸ‘‹ How can I help you?";
      else if(msg.includes("name")) reply = "My name is Tronix AI ðŸ¤–";
      else if(msg.includes("who made you")) reply = "I was created by Ameen ðŸ’»";
      else if(msg.includes("bye")) reply = "Goodbye ðŸ‘‹ Have a nice day!";
      else if(msg.includes("help")) reply = "I can chat and answer simple questions ðŸ˜Š";

      chat.innerHTML += "<p><b>Tronix AI:</b> " + reply + "</p>";
      document.getElementById("msg").value = "";
      chat.scrollTop = chat.scrollHeight;
    }
  </script>
